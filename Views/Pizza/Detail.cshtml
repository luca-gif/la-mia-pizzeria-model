@{
    Layout = "_Layout";
    @model Pizza

}

<div class="card mx-2" style="width: 15rem;">
    <img class="card-img-top" style="height: 160px" src="@Model.Image" alt="@pizza.Name">
    <div class="card-body">
        <h5 class="card-title">Pizza: @Model.Name</h5>
        <p class="card-text">Ingredienti: @Model.Description</p>
        <p class="card-text">Ingredienti: @Model.Price</p>
        <a href="@Url.Action("Index")" class="btn btn-primary">Indietro</a>
    </div>
</div>

   
    
      